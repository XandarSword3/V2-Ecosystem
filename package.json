{
  "name": "v2-resort",
  "version": "1.0.0",
  "private": true,
  "description": "V2 Resort Management System - Unified platform for restaurant, snack bar, chalets, and pool",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "stress-test": "npx ts-node tools/stress-test/run.ts",
    "stress-test:quick": "npx ts-node tools/stress-test/run.ts --customers 5 --staff 3 --trainees 2 --admins 1 --duration 60",
    "stress-test:medium": "npx ts-node tools/stress-test/run.ts --customers 25 --staff 10 --trainees 3 --admins 2 --duration 300",
    "stress-test:full": "npx ts-node tools/stress-test/run.ts --customers 50 --staff 15 --trainees 5 --admins 2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "supertest": "^7.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
