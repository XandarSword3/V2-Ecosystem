# ============================================
# V2 Resort Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# Deployment time: ~10 minutes (verified January 2026)

# ============================================
# REQUIRED: Supabase Configuration
# ============================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Database connection (from Supabase Dashboard > Settings > Database)
DATABASE_URL=postgresql://postgres:your-db-password@db.your-project-id.supabase.co:5432/postgres

# ============================================
# REQUIRED: Security Secrets
# ============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=generate_a_strong_random_secret_at_least_32_chars
JWT_REFRESH_SECRET=generate_another_strong_random_secret_at_least_32_chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# REQUIRED: Server Configuration
# ============================================
NODE_ENV=production
PORT=3001
CORS_ORIGIN=http://localhost:3000

# ============================================
# OPTIONAL: Stripe (for payments)
# ============================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# ============================================
# OPTIONAL: Frontend URLs
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME=V2 Resort

# ============================================
# OPTIONAL: Email (for password reset, notifications)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=V2 Resort <noreply@v2resort.com>

# ============================================
# OPTIONAL: Redis (for caching)
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# OPTIONAL: AWS S3 (for file uploads)
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-west-1
AWS_S3_BUCKET=v2resort-uploads

# ============================================
# OPTIONAL: Logging
# ============================================
LOG_LEVEL=info
