# Server
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# Database - REQUIRED: Replace with your actual Supabase credentials
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD_HERE@db.YOUR_PROJECT_REF.supabase.co:5432/postgres

# Supabase - REQUIRED: Get these from your Supabase project settings
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# JWT - REQUIRED: Generate strong random secrets (min 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_ME_generate_64_char_random_string
JWT_REFRESH_SECRET=CHANGE_ME_generate_another_64_char_random_string
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email (SendGrid or SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key
EMAIL_FROM=noreply@v2resort.com

# Storage (S3-compatible)
STORAGE_ENDPOINT=https://s3.amazonaws.com
STORAGE_BUCKET=v2-resort-files
STORAGE_ACCESS_KEY=your_access_key
STORAGE_SECRET_KEY=your_secret_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Auto-Translation API (for translating menu items, chalets, etc.)
# Choose one of the following options:

# OPTION 1: Google Translate (Recommended - Most Reliable)
# Get API key from: https://console.cloud.google.com/apis/credentials
# Enable "Cloud Translation API" in your Google Cloud project
# Cost: ~$20 per 1 million characters (first 500K/month free)
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key

# OPTION 2: LibreTranslate (Free / Self-Hosted)
# Public API (rate limited): https://libretranslate.com/translate
# Self-host for free: https://github.com/LibreTranslate/LibreTranslate
# LIBRE_TRANSLATE_URL=https://libretranslate.com/translate
# LIBRE_TRANSLATE_KEY=your_api_key_if_required

# Provider Selection: 'google', 'libre', 'fallback', or 'auto' (default)
# 'auto' will use Google if key exists, then Libre, then built-in fallback
TRANSLATION_PROVIDER=auto

# Error Tracking (Sentry) - Get your DSN from https://sentry.io
# Leave empty to disable Sentry
SENTRY_DSN=https://your-dsn@o123456.ingest.sentry.io/1234567

# Firebase (Push Notifications)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_SERVICE_ACCOUNT_PATH=./service-account.json
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@your-project.iam.gserviceaccount.com

# WebAuthn (Biometric Passkeys)
WEBAUTHN_RP_ID=localhost
WEBAUTHN_RP_NAME=V2 Resort
WEBAUTHN_ORIGIN=http://localhost:3000

# Mobile App
IOS_BUNDLE_ID=com.v2resort.app
ANDROID_BUNDLE_ID=com.v2resort.app
DEEP_LINK_SCHEME=v2resort